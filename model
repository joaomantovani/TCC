|--------------------------------------------------------------------------
| FUNCTIONS
|--------------------------------------------------------------------------
*/

/*
|--------------------------------------------------------------------------
| RELATIONS
|--------------------------------------------------------------------------
*/
public function parent()
{
    return $this->belongsTo('Backpack\NewsCRUD\app\Models\Category', 'parent_id');
}
public function children()
{
    return $this->hasMany('Backpack\NewsCRUD\app\Models\Category', 'parent_id');
}

